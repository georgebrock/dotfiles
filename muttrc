set pipe_decode
set thorough_search

set status_chars = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

ignore *
unignore subject: from: date: to: cc:
unhdr_order *
hdr_order subject: from: date: to: cc:

set spoolfile = "+george.brocklehurst-gmail.com/INBOX"
set mbox = "+george.brocklehurst-gmail.com/archive"
set postponed = "+george.brocklehurst-gmail.com/drafts"
alternates george@thoughtbot\.com george@choosyosx\.com george@iconicosx\.com [^@]+@georgebrock\.com

set date_format = "%Y-%m-%d"
set index_format = "%4C %Z   %D  %-20.20F  %s"
set sort = threads
set sort_aux = reverse-last-date-received

macro index gi "<change-folder>=george.brocklehurst-gmail.com/INBOX<enter>" "go to the INBOX"
macro index S "<enter-command>unset wait_key<enter><shell-escape>mutt-notmuch-py ~/.mail/temporary/search<enter><change-folder-readonly>+temporary/search<enter>" "search mail using notmuch"
bind index gg first-entry
bind pager gg top
bind index G last-entry
bind pager G bottom
bind index \Cf next-page
bind index \Cb previous-page
bind pager \Cf next-page
bind pager \Cb previous-page
macro index o "<shell-escape>offlineimap -qf INBOX<enter>" "run offlineimap for the inbox"
macro index O "<shell-escape>offlineimap -q<enter>" "run offlineimap for all folders"
macro pager \Cu "|urlview<enter>" "call urlview to open links"

set pager_index_lines = 10
set pager_stop
set menu_scroll
set tilde
unset markers

alternative_order text/plain text/enriched text/html
