#!/bin/sh

codespace="$1"

if ! ssh-add -l 2>&1 > /dev/null; then
  echo >&2 "$(basename "$0"): need to add private keys to the SSH agent"
  ssh-add
fi

if [[ $EUID -ne 0 ]]; then
  echo >&2 "$(basename "$0"): must run as root to forward port 80, re-running with sudo"
  exec sudo /bin/sh "$0" "$@"
fi

gh cs ports forward 80:80 3012:3012 2206:2206 -c "$codespace" &
pid1=$!
gh cs ports forward 6006:6006 3035:3035 -c "$codespace" &
pid2=$!

sleep 5
gh cs ssh -c "$codespace"

kill -s TERM "$pid1"
kill -s TERM "$pid2"
echo "Done."
