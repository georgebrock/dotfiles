[user]
  name = George Brocklehurst
  email = george@georgebrock.com
[core]
  excludesfile = ~/.gitignore
[push]
  default = current
[rebase]
  autosquash = true
[color]
  ui = true
[alias]
  c-p = cherry-pick
  graph = log --all --graph --decorate --oneline -n30
  rgrep = !git grep
  cb = rev-parse --abbrev-ref --symbolic-full-name HEAD
  rb = rev-parse --abbrev-ref --symbolic-full-name HEAD@{u}
  sb = !git show-branch $(git cb) $(git rb)
  tig = !tig
[mergetool "vimdiff"]
  cmd = vimdiff -f $LOCAL $MERGED $REMOTE
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
  guitool = vimdiff
[difftool]
  prompt = false
[mergetool]
  prompt = false
  keepBackup = false
[blame]
  date = short
[help]
  autocorrect = 1
[grep]
  lineNumber = true
  patternType = extended
[fetch]
  prune = true
[gitsh]
  prompt = "%D %c%b%#%w"
[include]
  path = ~/.gitconfig-gpg
